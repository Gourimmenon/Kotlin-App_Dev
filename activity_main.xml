<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="750sp"
        android:layout_height="2150sp"
        android:layout_marginLeft="-150sp"
        android:layout_marginTop="-700sp"
        android:contentDescription="@string/todo1"
        app:srcCompat="@drawable/minimal_black_and_white_journey_road" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autofillHints="password"
        android:background="#00000000"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="90sp"
                    android:layout_height="100sp"
                    android:layout_marginStart="90sp"
                    android:layout_marginTop="20sp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50sp"
                    android:text="@string/app_title"
                    android:textColor="#FFFFFF"
                    android:textSize="34sp"
                    android:visibility="visible" />

            </LinearLayout>

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="87sp"
                android:layout_marginTop="150sp"
                android:autofillHints=""
                android:ems="10"
                android:foregroundTint="#FFFFFF"
                android:hint="@string/user_id"
                android:inputType="textEmailAddress"
                android:textColor="#FFFFFF"
                android:textColorHint="#78909C"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/editTextTextPassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="87sp"
                android:layout_marginTop="50sp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#78909C"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160sp"
                android:text="@string/forgot_password"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="152sp"
                android:layout_marginTop="75sp"
                android:backgroundTint="#00BCD4"
                android:fontFamily="sans-serif-medium"
                android:text="@string/sign_in"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                tools:ignore="MissingConstraints,TextContrastCheck" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>
